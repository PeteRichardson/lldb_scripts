	lldb.eSectionTypeDWARFAppleTypes: "DWARFAppleTypes",
	lldb.eSectionTypeDWARFAppleNamespaces: "DWARFAppleNamespaces",
	lldb.eSectionTypeDWARFAppleObjC: "DWARFAppleObjC",
