	lldb.eSectionTypeDWARFDebugLineStr: "DWARFDebugLineStr",
	lldb.eSectionTypeDWARFDebugRngLists: "DWARFDebugRngLists",
	lldb.eSectionTypeDWARFDebugLocLists: "DWARFDebugLocLists",
